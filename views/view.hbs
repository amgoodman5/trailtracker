






      <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">{{name}} Trail</span>
              <p>{{distance}} miles</p>
              <p>{{location}}</p>
              <p>{{elevation_gain}} ft</p>
            </div>
            <div class="card-action">
              <a href="{{id}}/edit">edit</a>
              <a href="/">back</a>
              <form action="{{trail.id}}?_method=delete" method="POST">
              <button class="waves-effect waves-light btn waves-effect waves-light teal lighten-1 btn-small" name="delete">Delete Trail</button>
              </form>
            </div>
          </div>
        </div>
      </div>
