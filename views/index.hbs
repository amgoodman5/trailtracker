
<section id="index-banner" class="parallax-container">
  <nav class="nav-wrapper nav">
         <ul id="slide-out" class="side-nav">
         <li class = 'nav-a'>
           <li><a class="waves-effect waves-light btn-large" href = "#form">Explore</a></li>
         </ul>
         <a href="#form" data-activates="slide-out" class="button-collapse show-on-large"><i class="material-icons">menu</i></a>
     </nav>
     <main>

    <figure class="section no-pad-bot">
        <header class="container">
            <br><br>
            <h1 class="header center white-text text-lighten-2">INDIAN PEAKS</h1>
            <div class="row center">
                <h3 class="header col s12 white-text text-lighten-2">LOG YOUR HIKES</h3>
            </div>
            <div class="row center">
                <a href="#form" id="download-button" class="btn-large waves-effect waves-light teal lighten-1">Get Started</a>
            </div>
            <br><br>
        </header>
    </figure>
    <div class="parallax"><img src="images/eagle.jpg" alt="Unsplashed background img 1"></div>
</section>

<section class = "cardsbox">
<ul>
 {{#each data}}

 <div class="row" id='#form'>

        <div class="col s12 m12">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">

              <h2 class="card-title">{{this.name}}</h2>
            </div>
            <div class="card-action">
              <a href="/{{this.id}}">more</a>
              <a href="#">This is a link</a>
            </div>
          </div>
        </div>
      </div>
       {{/each}}
</ul>
</section>
<section id = "form">
    <h1> ADD TRAILS HERE</h1>
<form action="/" method="POST">
  <div class="row">
    <div class="input-field col s6">
  Name:<br>
  <input type="text" name="name"><br>
  Distance:<br>
  <input type="text" name="distance">
  Location:<br>
  <input type="text" name="location">
  Elevation gain:<br>
  <input type="text" name="elv_gain">

<button class="waves-effect waves-light teal lighten-1 btn-large waves-light teal lighten-1" input type="submit" value="Submit"> LOG IT!</button
</form>
</section>
